#include <stdio.h>
#include <stdlib.h>
#include <windows.h>
#include <locale.h>

  int main () {
  	int opcao=0;
  	float nota;
  	char nome;
  	
  	while ((opcao !=1) && (opcao !=2)&& (opcao !=3 )){
	
	  
  	system("cls");
    	printf("Bem vindo a meu sistema \n \n");
        printf("Menu\n");
        printf("------------\n");
        printf("1_ Cadastro de notas/Aluno \n");
        printf("2_ Alteração de Notas/Alunos \n");
        printf("3_ Sair \n");
        printf("Digite a sua opcao: ");
        scanf ("%i",& opcao);
            
	if (opcao = 1) {
	
	  printf("\nDigite a nota do aluno: ");
	  scanf("%f",& nota);
	  
	  
	  printf("\nDigite o nome do aluno: ");
	  scanf("&c",& nome);
         
	}	

 }
            
    return 0;
}
