#include <stdio.h>
#include <stdlib.h>

//Atividade 11, Questão 1

   int main (){

     char aluno[5][10];
     int nomes,contador;
     
     for(contador = 0; contador < 5; contador++){
     	printf("aluno %i: ",contador);
     	scanf("%s",aluno[contador]);
     	
     	
	 }
	 
	system("cls");
	
	for (nomes = 0; nomes<5;nomes++){
		printf("Aluno %i:%s\n",nomes,aluno[nomes]);
	}
	
  system("pause");
 
 return 0;
  

}
